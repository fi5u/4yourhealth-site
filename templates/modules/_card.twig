{% import 'modules/_card_macros.twig' as card %}

<article class="card{% if class %} {{ class }}{% endif %}">
    {{ fn('timber_set_product', post)}}

    {{ card.image_link(post, percent, class, card, currency_symbol, theme) }}

    {% do action('woocommerce_before_shop_loop_item_title') %}

    {{ card.title_link(post) }}

    {% do action( 'woocommerce_after_shop_loop_item_title' ) %}

    {{ card.excerpt(post, true) }}

    {{ card.add_to_cart(post) }}

    {% if not class == 'card--wide' %}
        {{ card.price_wrap(post, currency_symbol) }}
    {% endif %}

    {{ card.meta_url(post) }}

    {% do action( 'woocommerce_after_shop_loop_item' ) %}
</article>

